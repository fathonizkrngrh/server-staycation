<!-- Table -->
<div class="card shadow mb-4">
  <!-- <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div> -->
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Date</th>
            <th>Title</th>
            <th>Member Name</th>
            <th>Bank Name</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < booking.length; i++){ %>
          <tr>
            <td><%- i+1 %></td>
            <td><%- booking[i].bookingName %></td>
            <td><%- booking[i].rekeningNumber %></td>
            <td><%- booking[i].userName %></td>
            <td>
              <img
                src="http://localhost:3000/<%- booking[i].imageUrl %>"
                alt="imageUrl"
                height="70px"
                width="70px"
              />
            </td>
            <td>
              <form
                action="/admin/booking/<%- booking[i].id%>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= booking[i].id %>"
                  data-bookingname="<%= booking[i].bookingName %>"
                  data-rekening="<%= booking[i].rekeningNumber %>"
                  data-username="<%= booking[i].userName %>"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button class="btn btn-danger btn-circle btn-sm" type="submit">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>

          <% }%>
        </tbody>
      </table>
    </div>
  </div>
</div>
