<div id="show-activity" class="tab-pane fade">
  <!-- Table -->
  <div class="card shadow mb-4 mt-t">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/activity"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Activity Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter activity name"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="type">Type</label>
              <input
                type="text"
                class="form-control"
                id="type"
                placeholder="Enter Type"
                name="type"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                required
              />
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <div>
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTableActivity"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>type</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < activity.length; i++){ %>
                <tr>
                  <td><%- i+1 %></td>
                  <td><%- activity[i].name %></td>
                  <td><%- activity[i].type %></td>
                  <td>
                    <img
                      src="http://localhost:3000/<%- activity[i].imageUrl %>"
                      alt="imageUrl"
                      height="50px"
                      width="50px"
                    />
                  </td>
                  <td>
                    <form
                      action="/admin/item/<%- itemId %>/activity/<%- activity[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= activity[i].id %>"
                        data-name="<%= activity[i].name %>"
                        data-type="<%= activity[i].type %>"
                      >
                        <i class="fas fa-edit"></i>
                      </a>
                      <button
                        class="btn btn-danger btn-circle btn-sm"
                        type="submit"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>

                <% }%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- AkhirTable -->
</div>
