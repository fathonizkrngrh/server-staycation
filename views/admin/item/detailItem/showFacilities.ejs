<div id="show-facility" class="tab-pane fade show active" role="tabpanel">
  <!-- Table -->
  <div class="card shadow mb-4 mt-t">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/facility"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="mb-3">
              <label for="name">Facility Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                placeholder="Enter facility name"
                name="name"
                required
              />
            </div>
            <div class="mb-3">
              <label for="qty">Quantity</label>
              <input
                type="number"
                class="form-control"
                id="qty"
                placeholder="Enter Quantity"
                name="qty"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image">Image</label>
              <input
                type="file"
                class="form-control"
                id="image"
                name="image"
                required
              />
            </div>
            <div>
              <input type="text" value="<%= itemId %>" name="itemId" hidden />
              <button type="submit" class="btn btn-primary">Save</button>
            </div>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Qty</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- AkhirTable -->
</div>
