<div id="edit-item" class="tab-pane fade show active" role="tabpanel">
  <div class="card shadow mb-4 mt-t">
    <div class="card-body">
      <form
        action="/admin/item/<%= item.id%>?_method=PUT"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="row g-3">
          <div class="form-group col-md-6">
            <label for="title">Title</label>
            <input
              type="text"
              class="form-control"
              id="title"
              placeholder="Enter title"
              name="title"
              required
              value="<%= item.title %>"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="Price">Price</label>
            <input
              type="number"
              class="form-control"
              id="price"
              placeholder="Enter price"
              name="price"
              required
              value="<%= item.price %>"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="city">City</label>
            <input
              type="text"
              class="form-control"
              id="city"
              placeholder="Enter city"
              name="city"
              required
              value="<%= item.city %>"
            />
          </div>
          <div class="form-group col-md-6">
            <label for="name">Category</label>
            <select class="form-select" name="categoryId">
              <option value="<%= item.categoryId._id %>" selected>
                <%= item.categoryId.name %>
              </option>
              <% for (let i = 0; i< category.length; i++) { %>
              <option value="<%= category[i].id %>">
                <%= category[i].name %>
              </option>
              <% } %>
            </select>
          </div>
          <div class="form-group col-md-6">
            <label for="image">Image</label>
            <input
              type="file"
              class="form-control"
              id="image"
              name="image"
              multiple
            />
          </div>
          <div class="form-group col-12">
            <label for="description">Description</label>
            <textarea
              name="description"
              class="form-control"
              id="description"
              rows="200"
            >
<%= item.description %></textarea
            >
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Update</button>
      </form>
    </div>
  </div>
</div>
