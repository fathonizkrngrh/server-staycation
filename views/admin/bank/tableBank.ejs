<!-- Table -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button
      type="button"
      class="btn btn-primary"
      data-bs-toggle="modal"
      data-bs-target="#add-bank-modal"
    >
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Bank</th>
            <th>Nomor Rekening</th>
            <th>Nama Pengguna</th>
            <th>Image</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < bank.length; i++){ %>
          <tr>
            <td><%- i+1 %></td>
            <td><%- bank[i].bankName %></td>
            <td><%- bank[i].rekeningNumber %></td>
            <td><%- bank[i].userName %></td>
            <td>
              <img
                src="http://localhost:3000/<%- bank[i].imageUrl %>"
                alt="imageUrl"
                height="70px"
                width="70px"
              />
            </td>
            <td>
              <form
                action="/admin/bank/<%- bank[i].id%>?_method=DELETE"
                method="POST"
              >
                <a
                  href="javascript:void()"
                  type="button"
                  class="btn btn-warning btn-circle btn-sm button-update"
                  data-id="<%= bank[i].id %>"
                  data-bankname="<%= bank[i].bankName %>"
                  data-rekening="<%= bank[i].rekeningNumber %>"
                  data-username="<%= bank[i].userName %>"
                >
                  <i class="fas fa-edit"></i>
                </a>
                <button class="btn btn-danger btn-circle btn-sm" type="submit">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>

          <% }%>
        </tbody>
      </table>
    </div>
  </div>
</div>
