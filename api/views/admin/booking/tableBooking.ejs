<!-- Table -->
<div class="card shadow mb-4">
  <!-- <div class="card-header py-3">
    <h6 class="m-0 font-weight-bold text-primary">DataTables Example</h6>
  </div> -->
  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="dataTable"
        width="100%"
        cellspacing="0"
      >
        <thead>
          <tr>
            <th>No</th>
            <th>Invoice</th>
            <th>Date</th>
            <th>Title</th>
            <th>Member Name</th>
            <th>Status</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < booking.length; i++){ %>
          <tr>
            <td><%- i+1 %></td>
            <td><%- booking[i].invoice %></td>
            <td>
              <%- booking[i].bookingStartDate.toLocaleString().split(',')[0] %>
              <b>s/d</b> <%-
              booking[i].bookingEndDate.toLocaleString().split(',')[0] %>
            </td>
            <td><%- booking[i].itemId.title %></td>
            <td>
              <%- booking[i].memberId.firstName %> <%-
              booking[i].memberId.lastName %>
            </td>

            <% if(booking[i].payments.status == 'Rejected'){ %>
            <td>
              <b class="text-danger"><%- booking[i].payments.status %></b>
            </td>
            <% } else if(booking[i].payments.status == 'Accepted'){ %>
            <td>
              <b class="text-success"><%- booking[i].payments.status %></b>
            </td>
            <% } else { %>
            <td><b><%- booking[i].payments.status %></b></td>

            <% } %>
            <td>
              <a
                href="/admin/booking/<%= booking[i]._id %>"
                type="button"
                class="btn btn-success btn-circle btn-sm button-update"
              >
                <i class="fas fa-eye"></i>
              </a>
            </td>
          </tr>

          <% }%>
        </tbody>
      </table>
    </div>
  </div>
</div>
