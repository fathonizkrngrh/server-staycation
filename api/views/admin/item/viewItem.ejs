<%- include('../../partials/header.ejs') %>
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->

  <%- include('../../partials/sidebar.ejs') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->

      <%- include('../../partials/navbar.ejs') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div id="alert"><%- include('../../partials/message.ejs') %></div>
        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Item</h1>
        <!-- Akhir Heading -->

        <% if(action == 'view'){%>
        <!-- nav tabs -->
        <ul class="nav nav-tabs">
          <li class="nav-item active">
            <a
              class="nav-link active"
              data-toggle="tab"
              id="show-item-tab"
              href="#show-item"
              role="tab"
              >Show Item</a
            >
          </li>
          <li class="nav-item">
            <a
              class="nav-link"
              data-toggle="tab"
              id="add-item-tab"
              href="#add-item"
              role="tab"
              >Add Item</a
            >
          </li>
        </ul>
        <div class="tab-content">
          <%- include('tableItem.ejs') %> <%- include('addItem.ejs') %>
        </div>

        <% } else if(action == 'show image') { %>

        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a
              class="nav-link active"
              data-toggle="tab"
              id="show-item-tab"
              href="#show-image"
              role="tab"
              >Show Image</a
            >
          </li>
        </ul>
        <div class="tab-content"><%- include('showImageItem.ejs') %></div>

        <% } else { %>
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a
              class="nav-link active"
              data-toggle="tab"
              id="edit-item-tab"
              href="#edit-item"
              role="tab"
              >Edit Item</a
            >
          </li>
        </ul>
        <div class="tab-content"><%- include('editItem.ejs') %></div>
        <% } %>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->

    <%- include('../../partials/footer.ejs') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div
  class="modal fade"
  id="logoutModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="modal-body">
        Select "Logout" below if you are ready to end your current session.
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">
          Cancel
        </button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>

<%- include('../../partials/js.ejs') %>
<script>
  ClassicEditor.create(document.querySelector("#description")).catch(
    (error) => {
      console.error(error);
    }
  );
</script>
